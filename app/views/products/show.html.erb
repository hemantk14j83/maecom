<p id="notice"><%= notice %></p>

<div id="prdp" class="col-xs-12">
  <div id="bcrum" style="color:#767676!important;font-family: arial,sans-serif;margin-bottom:10px;">
    <%= @product.category%> > <%=@product.sub_category%> > <%=@product.title%>
  </div>
  <div id="pimage" class="col-xs-4">
    <%= image_tag(@product.image_url, :height=>"350") %>
  </div>
  <div id="tnp" class="col-xs-5">    
      <div id="title" style="margin-top:20px;">
        <h4><b><%= @product.title %></b><br> <span style="font-size:11px;color:grey;">By : <%= @product.brand %></span> </h4>
      </div>
      <div id="ul" style="margin-top:5px;border-top:dotted 1px;margin-top:10px;"></div>
      <div id="pprice" style="margin-top:5px;margin-top:20px;">
        <table>
          <tr>
            <td align="right">MRP &nbsp;</td>
            <td>: <span style="text-decoration:line-through;color:grey;font-size:16px;">&#8377 <%= sprintf("%0.02f",@product.base_price) %></span></td></tr>
          
          <tr>
            <td align="right">Offer Price &nbsp;</td>
            <td>: <span style="color:#444444;font-size:18px;">&#8377 <%= sprintf("%0.02f",@product.offer_price) %></span></td></tr>
          
          <tr>
            <td align="right">You save &nbsp;</td>
            <td>: <span style="color:green;font-size:18px;">
                        &#8377 <%= sprintf("%0.02f",@product.base_price - @product.offer_price ) %>
                      </span></td></tr>
        </table>
        <div id="cod" style="margin-left:5px;font-size:12px;margin-top:10px;">
          <b>Cash on Delivery - Available</b>
        </div>
        <% if @product.sales_package? %>
          <div id="spackage">
            <b>Sales Package :</b> <br>
            <%= @product.sales_package %>
          </div>
        <% end %>
        <% if @product.offer_test? %>
          <div id="otxt" style="margin-top:10px;">
            <span class="label label-success">Offer</span><br>
            <%= @product.offer_test %>
          </div>
        <% end %>
        <!--
        <div id="basep" style="text-decoration:line-through;color:grey;font-size:16px;">
          &#8377 <%= sprintf("%0.02f",@product.base_price) %>
        </div>
        <div id="offerp" style="color:#444444;font-size:18px;">
          &#8377 <b><%= sprintf("%0.02f",@product.offer_price) %></b>
        </div>
        <div id="offerp">
          You Save : <span style="color:green;font-size:18px;">
                        &#8377 <%= sprintf("%0.02f",@product.base_price - @product.offer_price ) %>
                      </span>
        </div>
        -->
      </div>    
  </div>
  <div id="pcart" class="col-xs-3">
    <div id="buynow" style="margin-left:10px;font-weight:bold;">
      <%= button_to "Add to Cart", selected_items_path(:product_id => @product), 
      :class => "btn btn-success", :style => "width:90%; margin-left:10px;" %><br>
      <%= button_to "Add to Wishlist", selected_items_path(:product_id => @product), 
      :class => "btn btn-warning",:style => "width:90%; margin-left:10px;margin-top:-10px;" %>
    </div>
    <div style="margin-left:10px;">
      <img src="http://g-ecx.images-amazon.com/images/G/01/RCX_events/trust_244x66_3._CB344866612_.png"> 
    </div>
  </div>
</div>

<div id="pdesc" class="col-xs-12">
    
    <% if @product.description? %>
      <div id="desctitle" style="font-size=18px;color:#204F87">
        <h4><b><%= @product.title %> Description</b></h4>
        <hr style="height: 8px;border: 0;box-shadow: inset 0 8px 8px -10px rgba(0,0,0,0.5);">
      </div>
      <div id="desc" style="margin-top:5px;">
      <%= @product.description.html_safe %>      
    </div>
    <% end %>
    

    <% if @product.features? %>
      <div id="featile" style="font-size=18px;color:#204F87">
        <h4><b><%= @product.title %> Features</b></h4>
      </div>
      <hr style="height: 8px;border: 0;box-shadow: inset 0 8px 8px -10px rgba(0,0,0,0.5);">
      <div id="feat" style="margin-top:5px;">
        <%= @product.features.html_safe %>
      </div>
    <% end %>
    
    <% if @product.disclaimer? %>
      <hr style="height: 8px;border: 0;box-shadow: inset 0 8px 8px -10px rgba(0,0,0,0.5);">
      <div id="disc" style="margin-top:-5px;">
        <span class="label label-info">Disclaimer</span>
          <%= @product.disclaimer.html_safe %>
      </div>    
    <% end %>
    
    <hr style="height: 8px;border: 0;box-shadow: inset 0 8px 8px -10px rgba(0,0,0,0.5);">
    <div id="osp" style="font-size=18px;color:#204F87">
    <h5><b>Other similar products you might be interested in..</b></h5>
    
    </div>
</div>

