  </div>
  <div class="input-field">
    <%#= f.label :updated_on %><br>
    <%#= f.datetime_select :updated_on %>
  </div>
  <div class="input-field">
    <%#= f.label :updated_by %><br>
    <%#= f.text_field :updated_by %>
  </div>-->
  <div class="actions" style="margin-top:10px;">
    <%= f.submit "Upload Product",:class=>"btn btn-green waves-light waves-effect" %>
  </div>
</div>
<% end %>
<div class="col hide-on-small m3 l3">&nbsp;</div>