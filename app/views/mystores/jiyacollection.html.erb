<div class="row">
  <div class="col s12 m12 l12">
    <%= image_tag("banners/jiyacollection/newbanner.jpg",:width=>"100%") %>
  </div>
  <div class="col s12 m12 l12">
     <div class="pro_box_header">
          <h5>Jiya's Collection</h5>
          <hr style="height: 8px;border: 0;box-shadow: inset 0 8px 8px -10px rgba(0,0,0,0.5);">
    </div>
    <% @products.each do |product| %>  
      <% if product.vendor_id=='New Vendor' %>  
        <% if product.quantity_limit > 1 %>  
            <div class="col s6 m2 l2" style="margin-right:15px;margin-left:15px;padding-left:20px;">
              <div class="pro_box">
                <div style="margin-top:5px;text-align:center;">
                  <%= link_to(image_tag(product.image_url, :height=>"195", :width=>"125",:alt=>product.title), :controller=>"products", :action=>"show",:id=>product.id) %>
                </div>
                <div style="margin-left:5px; margin-top:5px;">
                  <%= truncate(product.title, :length=>30) %>
                </div>
                <div style="border-top:1px solid #999;margin-right:5px;margin-left:5px;padding-top:5px;">
                  <font color="green"><b>&#8377 <%= sprintf("%0.02f", product.offer_price) %></b></font>
                  <div style="text-align:right;margin-top:-20px;margin-right:5px">
                    <span style="text-decoration:line-through;color:grey;">&#8377 <%= sprintf("%0.02f",product.base_price) %></span>
                  </div>
                </div>
              </div>
            </div>
        <%end%>
      <%end%>
    <% end %>
  </div>
</div>